{% extends 'errors.error' %}

{% block title %}
    {{ status }} - {{ Lang.get('messages.error') }}
{% endblock %}

{% block header %}
    {{ Lang.get('messages.error') }} ({{ status }})
{% endblock %}

{% block content %}
    <p>{{ Lang.get('messages.not_logged_exception')|raw }}</p>

    <p>{{ Lang.get('messages.return_to', {'page': '<a href="' ~ URL.previous() ~ '">' ~ mb_strtolower(Lang.get('general.previous_page'), 'UTF-8') ~ '</a>'})|raw }}</p>
{% endblock %}
